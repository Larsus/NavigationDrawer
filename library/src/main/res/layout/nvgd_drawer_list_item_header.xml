<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    android:gravity="start|center_vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nvgd_item_header_height">

    <View
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="start|center_vertical"
        android:background="@color/nvgd_gray" />

    <TextView
        android:id="@+id/nvg_drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nvgd_item_height"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/nvgd_default_textSize"
        android:textColor="@color/nvgd_black"
        android:alpha="0.54"
        android:paddingLeft="@dimen/nvgd_keyline_1"
        android:paddingRight="@dimen/nvgd_keyline_1"
        android:text="Supheader"/>
</FrameLayout>